generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") 
}

model Subject {
  id        Int      @id @default(autoincrement())
  name      String
  userId    String   
  tasks     Task[]
  createdAt DateTime @default(now())

  @@unique([name, userId])
}

model Task {
  id        Int       @id @default(autoincrement())
  title     String
  deadline  DateTime
  priority  Priority
  status    Status
  done      Boolean   @default(false)
  notes     String?
  subjectId Int
  userId    String  
  createdAt DateTime @default(now())

  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

enum Status {
  NOT_STARTED
  IN_PROGRESS
  DONE
}

